{
  "name": "rwa-lifecycle-sdk",
  "version": "1.0.0",
  "private": true,
  "description": "Developer-focused library that automates the full lifecycle of tokenized real-world assets on Mantle",
  "workspaces": [
    "packages/*",
    "relayer",
    "examples"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "contracts:build": "cd contracts && forge build",
    "contracts:test": "cd contracts && forge test",
    "contracts:deploy:testnet": "cd contracts && forge script script/Deploy.s.sol --rpc-url $MANTLE_TESTNET_RPC --broadcast"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "vitest": "^1.0.0",
    "tsup": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
